<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.adt.mapper.BoardMapper">
	<sql id="criteria">
		<trim prefix="(" suffix=") and" prefixOverrides="or">
			<foreach item='type' collection="typeArr">
				<trim prefix="or">
					<choose>
						<when test="type == 'T'.toString()">
							p_Title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							nick_Name like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							planner.city_No = #{keyword}
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<!-- 게시판전체목록 가져오기 -->
	<select id="getBoardList" resultType="org.adt.domain.BoardVO">
		<![CDATA[
		  select * 
		  from(
		  SELECT /*+INDEX_DESC(BOARD PK_BOARD)*/
          ROWNUM RN, BNO, TITLE, B_CONTENT, NICK_NAME, B_CLICKNUM, B_LIKE, REGDATE, UPDATEDATE 
          FROM BOARD
				 where
				 rownum <= #{pageNum} * #{amount})
			where 	rn > (#{pageNum} - 1) * #{amount}
		]]>
	</select>
	
	<select id="read" resultType="org.adt.domain.BoardVO">
		select * from board where bno =
		#{bno}
	</select>
	<!-- 게시판 전체 페이징 -->
	<select id="boardPaging" resultType="int">
		<![CDATA[
		  select	count(*)
		from	board
		where	board.bno > 0
		]]>
	</select>
	<select id="getTotalCount" resultType="int">
		select count(*) from board where

		<include refid="criteria"></include>

		bno > 0

	</select>
</mapper>